<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
       <th>Picture</th>
      <th>Has diploma</th>
      <th>Description</th>
      <th>Is remote</th>
      <th>Adress</th>
      <th>Zip code</th>
      <th>Image url</th>
      <th>Duration</th>
      <th>Start date</th>
      <th>Duration scale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.price %></td>
        <td> <%if course.picture.attached?%>  <img class="card-img-top"> <%= image_tag course.picture %> <%end%> </td>
        <td><%= course.has_diploma %></td>
        <td><%= course.description %></td>
        <td><%= course.is_remote %></td>
        <td><%= course.adress %></td>
        <td><%= course.zip_code %></td>
        <td><%= course.image_url %></td>
        <td><%= course.duration %></td>
        <td><%= course.start_date %></td>
        <td><%= course.duration_scale %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

